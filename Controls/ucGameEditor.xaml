<wpf:ucBaseDialogueControl x:Class="LeagueTracker.Controls.ucGameEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeagueTracker.Controls"
             xmlns:wpf="clr-namespace:MoonliteSoftware.Core.WPF;assembly=MoonliteSoftware.Core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
    <DockPanel LastChildFill="True">
        <Label x:Name="label" Content="Game Name:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="tbName" TextWrapping="Wrap" Text="{Binding Name}" Height="23" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </DockPanel>
</wpf:ucBaseDialogueControl>

